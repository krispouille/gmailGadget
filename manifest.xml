<?xml version="1.0" encoding="UTF-8" ?>
<ApplicationManifest xmlns="http://schemas.google.com/ApplicationManifest/2009">
    <!-- Name and description pulled from message bundles -->
      <Name>SayHello</Name>
      <Description>A simple application that show a HELLO</Description>

      <Extension id="subjectExtrator" type="contextExtractor">
          <Name>Say Hello</Name>
          <Url>google.com:SubjectExtractor</Url>
          <!--<Param name="subject" value=".*test.*"/>-->
          <Triggers ref="SayHello"/>
          <!--<Scope ref="emailSubject"/>-->
          <!--<Scope ref="emailBody"/>-->
          <Container name="mail"/>
      </Extension>

      <!-- gmail contextual gadget -->
      <Extension id="SayHello" type="gadget">
          <Name>Hello World Gmail contextual gadget</Name>
          <Url>http://raw.github.com/krispouille/gmailGadget/master/spec.xml</Url>
          <Container name="mail"/>
      </Extension>

