<?xml version="1.0" encoding="UTF-8" ?>
<ApplicationManifest xmlns="http://schemas.google.com/ApplicationManifest/2009">
    <!-- Name and description pulled from message bundles -->
      <Name>SayHello</Name>
      <Description>A simple application that show a HELLO</Description>

      <Extension id="realm" type="openIdRealm">
          <Url>http://jamesbpollack.com</Url>
      </Extension>

      <Extension id="sayHelloExtrator" type="contextExtractor">
          <Name>Say Hello</Name>
          <Url>google.com:SayHello</Url>
          <!--<Param name="subject" value=".*test.*"/>-->
          <Triggers ref="SayHello"/>
          <Scope ref="emailSubject"/>
          <Scope ref="emailBody"/>
          <Container name="mail"/>
      </Extension>

      <!-- gmail contextual gadget -->
      <Extension id="SayHello" type="gadget">
          <Name>Hello World Gmail contextual gadget</Name>
          <Url>https://raw.github.com/krispouille/gmailGadget/master/spec.xml</Url>
          <Container name="mail"/>
      </Extension>

      <Scope id="emailSubject">
          <Url>tag:google.com,2010:auth/contextual/extractor/SUBJECT</Url>
          <Reason>This application searches the Subject: line of each email for the text "test"</Reason>
      </Scope>

      <Scope id="emailBody">
          <Url>tag:google.com,2010:auth/contextual/extractor/BODY</Url>
          <Reason>This application searches the message body of each email for the text "test"</Reason>
      </Scope>
</ApplicationManifest>
